model Utilisateur {
  id         Int     @id @default(autoincrement())
  nom        String
  prenom     String
  email      String  @unique
  motDePasse String
  salles     Salle[]
}

model Salle {
  id            Int          @id @default(autoincrement())
  nom           String
  numero        Int
  idUtilisateur Int?
  reserve       Boolean      @default(false)
  utilisateur   Utilisateur? @relation(fields: [idUtilisateur], references: [id])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
